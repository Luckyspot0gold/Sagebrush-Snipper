  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Luckyspot0gold/WyoVerse.git"
  },
  "homepage": "https://wyoverse.com",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
