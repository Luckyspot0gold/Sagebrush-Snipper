{
  "routes": [
    { "src": "/bill/(.*)", "dest": "/api/bill?section=$1" },
    { "src": "/games", "dest": "/api/game-hub" },
    { "src": "/revenue", "dest": "/api/revenue-dashboard" },
    { "src": "/api/avalanche", "dest": "/api/avalanche/route" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=3600" },
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization, X-Requested-With" }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=60" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization, X-Requested-With" }
      ]
    }
  ],
  "functions": {
    "app/api/bill/advice.ts": {
      "runtime": "edge"
    },
    "app/api/avalanche/route.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/hackathon",
      "destination": "/?tab=hackathon"
    }
  ],
  "domains": ["cryptoclashers.games", "stoneyard.cash", "wyoverse.com"]
}
